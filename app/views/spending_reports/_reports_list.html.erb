<%= turbo_frame_tag "spending_results" do %>
  <div class="bg-white shadow overflow-hidden sm:rounded-md border border-gray-200">
    <ul role="list" class="divide-y divide-gray-200">
      <% reports.each do |report| %>
        <li class="hover:bg-gray-50 transition duration-150 ease-in-out relative group">
          <%= link_to spending_report_path(report), class: "block p-4", data: { turbo_frame: "_top" } do %>
            <div class="flex items-center justify-between">
              <div class="flex-1 min-w-0 pr-4">
                <div class="flex items-center mb-1">
                  <p class="text-xs font-bold text-indigo-600 uppercase tracking-wide truncate">
                    <%= report.agency_name %> 
                    <% if report.department_name.present? %>
                      <span class="text-gray-400 mx-1">/</span> <%= report.department_name %>
                    <% end %>
                  </p>
                </div>
                <p class="text-lg text-gray-900 font-semibold truncate group-hover:text-indigo-600 transition-colors">
                  <%= report.description %>
                </p>
                <div class="mt-2 flex items-center text-sm text-gray-500 space-x-4">
                  <span class="flex items-center">
                    <svg class="mr-1.5 h-4 w-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
                    <%= report.transaction_date.strftime("%b %d, %Y") %>
                  </span>
                  <% if report.category.present? %>
                    <span class="px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800 border border-gray-200">
                      <%= report.category %>
                    </span>
                  <% end %>
                </div>
              </div>
              <div class="text-right">
                <p class="text-xl font-bold text-gray-900"><%= number_to_currency(report.amount) %></p>
                <div class="mt-1 text-xs text-indigo-500 opacity-0 group-hover:opacity-100 transition-opacity">
                  View Details &rarr;
                </div>
              </div>
            </div>
          <% end %>
        </li>
      <% end %>
    </ul>
    
    <% if reports.empty? %>
      <div class="p-12 text-center">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No reports found</h3>
        <p class="mt-1 text-sm text-gray-500">Try adjusting your search terms or checking back later.</p>
      </div>
    <% end %>
  </div>

  <% if defined?(pagy) && pagy && pagy.pages > 1 %>
    <div class="mt-6 flex justify-center text-sm text-gray-600">
      <%== pagy.series_nav %>
    </div>
  <% end %>
<% end %>